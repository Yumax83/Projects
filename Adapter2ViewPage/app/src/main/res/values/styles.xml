<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">#FFFFFF</item>
        <item name="android:dropDownSelector">@drawable/spinner_dropdown_item</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">#2196F3</item>
        <item name="android:spinnerDropDownItemStyle">@style/CustomSpinnerItem</item>
    </style>

    <style name="CustomSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>



</resources>