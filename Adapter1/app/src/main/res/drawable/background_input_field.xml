<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item tools:ignore="StateListReachable">
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <stroke android:color="#E0E0E0" android:width="1dp"/> <!-- Light gray border -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Pressed or hovered state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F5F5F5"/> <!-- Slightly darker background on press -->
            <stroke android:color="#BDBDBD" android:width="1dp"/> <!-- Darker border on press -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>