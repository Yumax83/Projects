        <LinearLayout
            android:id="@+id/androidLayoutOuter1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/white_box"
            android:orientation="vertical">

            <TextView
