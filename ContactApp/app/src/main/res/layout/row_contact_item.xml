<?xml version="1.0" encoding="utf-8"?>
<ru.rambler.libs.swipe_layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:padding="10dp">

    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/baseline_person_24"
        android:background="@drawable/circular"
        />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textColor="@color/colorTextPrimary"
            android:layout_toEndOf="@+id/contact_image"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            />
        <ImageView
            android:id="@+id/contact_number_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_local_phone_24"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="16dp"
            app:tint="@color/colorTextPrimary" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        app:gravity="right"
        app:bring_to_clamp="150dp"
        app:clamp="self"
        app:sticky="100dp">

        <ImageView
            android:id="@+id/drag_item"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_edit_24"
            android:background="@color/colorTextPrimary"
            android:layout_gravity="end"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            />

        <ImageView
            android:id="@+id/right_view"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:src="@drawable/baseline_delete_forever_24"
            android:background="@color/colorThemeExtra"
            />

    </LinearLayout>


</ru.rambler.libs.swipe_layout.SwipeLayout>